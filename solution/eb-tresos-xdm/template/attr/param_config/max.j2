{%- import "attr/common.j2" as Common -%}

{%- macro __max_node(__context__, type, tsts, value, prefix) -%}
{%- if type == "XPath" -%}
<a:{{prefix}}a name="MAX" type="XPath">
    {%- for tst in tsts -%}
    <a:tst  expr="{{- tst.expr | expr_filter(__context__) -}}" 
            {{-Common.set_attr("true", tst.true_text)-}}
            {{-Common.set_attr("false", tst.false_text)-}} />
    {%- endfor -%}
</a:{{prefix}}a>
{%- else -%}
    {%- if value is not none -%}
<a:{{prefix}}a name="MAX" value="{{value}}"/>
    {%- endif -%}
{%- endif -%}
{%- endmacro -%}

{%- macro max_node(__context__, maxConfig, prefix) -%}
{{__max_node(__context__, maxConfig.type, maxConfig.tsts, maxConfig.value, prefix)}}
{%- endmacro -%}