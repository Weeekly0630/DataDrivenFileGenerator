{%- import "attr/common.j2" as Common -%}
{# DEFAULT #}
{%- macro __default_node(__context__, type, tsts, value, prefix) -%}
{%- if type == "XPath" -%}
<a:{{prefix}}a name="DEFAULT" type="XPath">
    {%- for tst in tsts -%}
    <a:tst  expr="{{- tst.expr | expr_filter(__context__) -}}" 
            {{-Common.set_attr("true", tst.true_text)-}}
            {{-Common.set_attr("false", tst.false_text)-}} />
    {%- endfor -%}
</a:{{prefix}}a>
{%- else -%}
    {%- if value is not none -%}
        {% if value is true %}
<a:{{prefix}}a name="DEFAULT" value="true"/>
        {% elif value is false %}
<a:{{prefix}}a name="DEFAULT" value="false"/>
        {% endif %}
    {%- endif -%}
{%- endif -%}
{%- endmacro -%}

{%- macro default_node(__context__, defaultConfig, prefix) -%}
{{__default_node(__context__, defaultConfig.type, defaultConfig.tsts, defaultConfig.value, prefix)}}
{%- endmacro -%}